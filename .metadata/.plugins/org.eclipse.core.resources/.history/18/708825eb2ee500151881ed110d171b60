	private void build() {
		setTitle("Twitter Timeline");
		setSize(800,600);
		setLocationRelativeTo(null);
		setResizable(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		buildContentPanel();
	}
	
	private JTable buildContentPanel() {
		Json test = new Json();
		
		DefaultTableModel tableModel = new DefaultTableModel();
		JTable table = new JTable(tableModel);
		for (int a = 0; a < Json.array.size(); a++) {
			String date = Json.array.get(a).getDate();
			String text = Json.array.get(a).getText();
			String name = Json.array.get(a).getName();
			String screen_name = Json.array.get(a).getScreen_name();
			String avatar = Json.array.get(a).getAvatar();
			
			Object[] data = {date, text, name, screen_name, avatar};
			
			tableModel.add(data);
		}
	
		//JFrame frame = new JFrame("Twitter Timeline 2");

		// Create our different component
		JButton button = new JButton("Rafraîchir");	

		JLabel labelDate = null;
		JLabel labelName = null;
		JLabel labelText = null;
		
		for(int e = 0; e < Json.array.size(); e++) {
			labelDate = new JLabel(Json.array.get(e).getDate());
			labelName = new JLabel(Json.array.get(e).getName());
			labelText = new JLabel(Json.array.get(e).getText());
			
/*			BoxLayout boxLayout = new BoxLayout(frame.getContentPane(), BoxLayout.Y_AXIS);
			frame.setLayout(boxLayout);
			frame.add(button);
			frame.add(labelDate);
			frame.add(labelName);
			frame.add(labelText);
			frame.pack();*/
		}

		tableau.setVisible(true);
		return tableau;
	}
