package ppe.favre.twittertimeline.java.com;

import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Graphical extends JFrame {
/*	public void run() {
		TimelineWindo
	}*/
	public Graphical() {
		super();
		build();
	}
	
	private void build() {
		setTitle("Twitter Timeline");
		setSize(800,600);
		setLocationRelativeTo(null);
		setResizable(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setContentPane(buildContentPanel());
	}
	
	private JPanel buildContentPanel() {
		Json test = new Json();
		// Create our different component
		JButton button = new JButton("Rafraîchir");	
		button.setPreferredSize(new Dimension(150,50));
		JLabel labelDate = null;
		JLabel labelName = null;
		JLabel labelText = null;
		
		for(int e = 0; e < Json.array.size(); e++) {
			labelDate = new JLabel(Json.array.get(e).getDate());
			labelName = new JLabel(Json.array.get(e).getName());
			labelText = new JLabel(Json.array.get(e).getText());
		}
		
		JPanel content = new JPanel();
		content.setPreferredSize(new Dimension(800,560));
		content.setLayout(new GridBagLayout());

		GridBagConstraints gbc = new GridBagConstraints();
		
		// Start of layout
		gbc.gridwidth = GridBagConstraints.REMAINDER;	// End line
		gbc.gridx = 0;
		gbc.gridy = 0;
		
		gbc.gridheight = 1;
		gbc.gridwidth = 1;
		content.add(button, gbc);
		

		gbc.fill = GridBagConstraints.VERTICAL; // Vertical Duplication 
		
		gbc.gridy = 1;
		content.add(labelDate, gbc);
		
		gbc.fill = GridBagConstraints.VERTICAL; // Vertical Duplication 
		
		gbc.gridy = 2;
		content.add(labelName, gbc);
		
		gbc.fill = GridBagConstraints.VERTICAL; // Vertical Duplication 
		
		gbc.gridy = 3;
		content.add(labelText, gbc);
		
		return content;
	}
}
